---
import "/src/styles/global.css";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
  linkTo: string;
}

const { imagePath = "", altText = "", linkTo = "#" } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif}"
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
---

<li>
  <a href={linkTo} class="">
    <div
      class="flex flex-col items-stretch rounded-lg border border-gray-200 bg-white shadow-sm hover:bg-gray-100 md:max-w-xl md:flex-row dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
    >
      <Image
        class="size-90 w-full rounded-t-lg object-cover md:size-48 md:rounded-none md:rounded-s-lg"
        ,
        src={images[imagePath]()}
        ,
        alt={altText}
      />
      <div class="m-5 flex flex-col gap-1 leading-normal">
        <h2
          class="mb-2 place-self-start text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
        >
          <slot name="card_title" />
        </h2>
        <p class="font-normal text-gray-700 dark:text-gray-400">
          <slot name="card_description" />
        </p>
      </div>
    </div></a
  >
</li>
