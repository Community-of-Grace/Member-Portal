---
import {
  SignedIn,
  SignedOut,
  UserButton,
  SignInButton,
} from "@clerk/astro/components";
import { Icon } from "astro-icon/components";
import "./src/styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <header class="flex items-center p-2.5 gap-2">
      <div class="flex flex-row items-center gap-1">
        <img
          alt="Community of Grace Logo"
          src="/src/assets/cog_logo.svg"
          class="hidden 2xs:inline size-12 sm:size-16"
        />
        <h1 class="text-2xl sm:text-3xl font-display text-black flex-1/4">
          Member Portal
        </h1>
      </div>
      <nav class="flex-3/4 flex flex-row items-center justify-between gap-1">
        <menu class="items-center justify-center flex flex-5">
          <li>
            <a
              class="text-xl sm:text-2xl font-display self-center items-center justify-center"
              href="https://transformlives.org"
            >
              <span class="xs:hidden inline-block hover:underline text-left"
                >CoG Homepage<Icon
                  class="inline-block"
                  name="mdi:external-link"
                />
              </span>
              <span class="xs:inline-block hidden hover:underline text-left"
                >Return to CoG Homepage <Icon
                  class="inline-block"
                  name="mdi:external-link"
                />
              </span>
            </a>
          </li>
        </menu>
        <div
          id="auth_buttons"
          class="h-full flex-2 flex flex-col items-end justify-center"
        >
          <SignedOut>
            <SignInButton
              mode="modal"
              class="text-white bg-cog-burgundy-400 hover:bg-cog-burgundy-500 focus:ring-4 focus:ring-cog-burgundy-200 font-display rounded-lg text-xl px-5 py-2.5"
            />
          </SignedOut>
          <SignedIn class="flex justify-center">
            <UserButton />
          </SignedIn>
        </div>
      </nav>
    </header>
    <SignedIn>
      <div
        class="bg-gradient-to-tr from-cog-burgundy-100 to-cog-burgundy-500 h-3/7"
      >
      Welcome User!
      </div>
    </SignedIn>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
